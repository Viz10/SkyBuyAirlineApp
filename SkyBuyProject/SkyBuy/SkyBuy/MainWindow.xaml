<Window
    x:Class="SkyBuy.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="RootGrid" KeyDown="RootGrid_KeyDown">
        
        <StackPanel x:Name="WelcomePanel" Spacing="20" VerticalAlignment="Center">
            <TextBlock Text="Welcome to SkyBuy" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button Content="Begin"  Click="Begin_Button_Click" Width="200" Height="50" HorizontalAlignment="Center" Margin="0,100,0,0"/>
        </StackPanel>

        <Frame x:Name="adminFrame" Visibility="Collapsed"/>
        <Frame x:Name="customerFrame" Visibility="Collapsed"/>

    </Grid>
</Window>