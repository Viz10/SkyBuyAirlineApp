<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SkyBuy.View.AdminMainDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SkyBuy.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <Style x:Key="button" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="IsEnabled" Value="{x:Bind ViewModel.IsNotLoading , Mode=OneWay}" />
            </Style>

            

        </ResourceDictionary>
    </Page.Resources>


    <Grid>

        <!-- ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= TOP BAR ================= -->
        <Border Grid.Row="0" Background="MediumPurple">
            <Grid Padding="12">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                
                <!-- LOGOUT -->
                <Button Grid.Column="0"
                    Style="{StaticResource button}"
                    Content="LOG-OUT"
                    Command="{x:Bind ViewModel.GoBackLoginPageCommand}"
                    />

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- TITLE -->
                    <TextBlock 
                    Text="Welcome"
                    FontSize="20"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>    

                    <TextBlock Grid.Column="1"
                    Text="{x:Bind ViewModel.WelcomeString,Mode=OneTime}"
                    FontSize="20"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                </StackPanel>

            </Grid>
        </Border>

        <!-- Main features-->
        <Border Grid.Row="1" Background="RosyBrown">

            <Grid>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- First column-->
                <Border Grid.Column="0" Background="RosyBrown">

                    <StackPanel  Orientation="Vertical" Spacing="50" HorizontalAlignment="Center" VerticalAlignment="Center">

                        <Button 
                        Style="{StaticResource button}"
                        Content="REFRESH AIRPORTS"
                        Command="{x:Bind ViewModel.AddAirportsCommand}"
                        />

                        <Border Background="LightSlateGray" 
                        CornerRadius="8" 
                        Padding="20" 
                        BorderBrush="#e5e7eb" 
                        BorderThickness="1">
                            <StackPanel Orientation="Vertical" Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">

                            <Border Background="White" 
                            CornerRadius="8" 
                            Padding="20" 
                            BorderBrush="#e5e7eb" 
                            BorderThickness="1">
                                <ListView ItemsSource="{x:Bind ViewModel.Airline_Divisions, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.Airline_Division_Iata, Mode=TwoWay}"
                              SelectionMode="Single"
                              MaxHeight="200">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <TextBlock Text="{x:Bind}" FontSize="14" Foreground="Black"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            </Border>
                            
                            <Button 
                            Style="{StaticResource button}"
                            Content="Add Schedule"
                            Command="{x:Bind ViewModel.AddScheduleCommand}"
                            />

                            <Button 
                            Style="{StaticResource button}"
                            Content="REFRESH AIRPLANES"
                            Command="{x:Bind ViewModel.AddAircraftsCommand}"
                            />

                            <TextBlock Text="{x:Bind ViewModel.ErrorString,Mode=OneWay}" Visibility="{x:Bind ViewModel.HasErrors,Mode=OneWay}" Foreground="Red" FontSize="20"/>

                             <ProgressRing 
                            Visibility="{x:Bind ViewModel.IsLoading,Mode=OneWay}" 
                            IsActive="{x:Bind ViewModel.IsLoading ,Mode=OneWay}" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" />
                            </StackPanel>
                        
                        </Border>
                    </StackPanel>

                </Border>

                <Border Grid.Column="1" Background="IndianRed">
                </Border>

                <Border Grid.Column="2" Background="IndianRed">
                </Border>

            </Grid>
     
        </Border>
    
    </Grid>
</Page>
